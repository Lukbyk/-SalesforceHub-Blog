<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>https://salesforcedecoded.com/</loc>
    <lastmod>{{ collections.articles[0].date | dateToISO }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {# Static pages #}
  <url>
    <loc>https://salesforcedecoded.com/dla-kogo/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>https://salesforcedecoded.com/o-nas/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  <url>
    <loc>https://salesforcedecoded.com/privacy-policy/</loc>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
  </url>
  
  {# All articles #}
  {%- for article in collections.articles -%}
  <url>
    <loc>https://salesforcedecoded.com{{ article.url }}</loc>
    <lastmod>{{ article.date | dateToISO }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  {%- endfor -%}
</urlset>
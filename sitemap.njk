<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>https://salesforcedecoded.com/</loc>
    {%- if sanity and sanity.length > 0 -%}
    <lastmod>{{ sanity[0].publishedAt | dateToISO }}</lastmod>
    {%- endif -%}
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  {# Static pages #}
  <url>
    <loc>https://salesforcedecoded.com/who-is-this-for/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
</url>
<url>
    <loc>https://salesforcedecoded.com/about/</loc>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
</url>
  <url>
    <loc>https://salesforcedecoded.com/privacy-policy/</loc>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
  </url>
  
  {# All articles from Sanity #}
  {%- for article in sanity -%}
  <url>
    <loc>https://salesforcedecoded.com{{ article.url }}</loc>
    <lastmod>{{ article.publishedAt | dateToISO }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.9</priority>
  </url>
  {%- endfor -%}
</urlset>
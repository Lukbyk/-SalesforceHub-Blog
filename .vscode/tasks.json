{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Sanity Studio",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/studio"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Eleventy (Blog)",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "problemMatcher": []
    },
    {
      "label": "Git Push",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "git add .; git commit -m 'Update'; git push origin master"
      ],
      "problemMatcher": []
    }
  ]
}